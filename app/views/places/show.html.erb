<h1><%= @place["name"] %></h1>

<h3>Post</h3>

<ul>
  <% for post in @posts %>
    <li><%= post["title"] %>, <%= post["description"] %>, <%= post["posted_on"] %>, <%= post["place_id"] %> </li>
  <% end %>
</ul>

<p>
  <a href="/post/new?place_id=<%= @place["id"] %>">New post</a>
</p>

<p><a href="/places">Back to All Places</a></p>

<p><%= button_to "Delete this place", @company, method: :delete %></p>